<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <OutputPath>..\lib</OutputPath>
    <Description>MessagePack serialization support for vvvv</Description>
    <PackageTags>VL, msgpack, json, messagepack, serialization</PackageTags>
    <VLPackageBasePath>..\</VLPackageBasePath>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MessagePack" />
    <PackageReference Include="SkiaSharp" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\VL.CoreLib\src\VL.CoreLib.csproj" />
  </ItemGroup>

</Project>
